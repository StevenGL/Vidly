@model Vidly.Models.Customers
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    @try
    {
        if (Model.Birthday.HasValue)
         {
             <li>Membership Type: @Model.MembershipType.TypeOfMembership</li>
             <li>Birthday: @Model.Birthday.Value.ToLongDateString();</li>

        }

        else
        {
            <li>Membership Type: @Model.MembershipType.TypeOfMembership</li>
        }
    }

    catch { }
</ul>