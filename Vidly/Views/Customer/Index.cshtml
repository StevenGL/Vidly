@using System.Web.UI.WebControls
@using Vidly.Controllers
@model IEnumerable<Vidly.Models.Customers>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (Model.Count() == 0)
{
    <h2 class="danger">No hay ningun cliente regsitrado!!</h2>
}
else
{
    <table class="table table-bordered table-hover">

        <thead>
            <tr>
                <th>Customer</th>
                <th>Membership Type</th>
            </tr>
        </thead>

        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@Html.ActionLink(customer.Name, "Details", "Customer", new { id = customer.Id }, null)</td>
                    <td>@customer.MembershipType.TypeOfMembership</td>
                </tr>
            }
        </tbody>
    </table>
}

